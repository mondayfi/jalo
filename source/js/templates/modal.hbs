<div class="ja-modal">
  <header class="ja-topnav ja-topnav--white">
    <a href="/" class="ja-topnav__logo"><div class="ja-topnav__logoinner"><img src="images/jalo_logo_noicon.svg" alt="Jalo" class="ja-topnav__logoimg"></div></a>
    <div class="ja-topnav__right">
      <div class="ja-topnav__item ja-topnav__item--noborder">
        <a class="ja-topnav__close ja-inlineicon--close" href="/details"></a>
      </div>
    </div>
  </header>

  <div class="ja-modal__content">
    <div class="ja-grid">
      <div class="ja-answerlist">
        <h3 class="ja-answerlist__header ja-h3">{{work-title}}</h3>
        <ul class="ja_list">
          {{#each work}}
          <li class="ja_list__item"><a href="/details/{{slug}}">{{name}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>